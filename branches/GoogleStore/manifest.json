{
  "name": "Hebrew Tooltip Translation for Google Chrome™",
  "version": "2.2",
  "description": "Translate Hebrew to English and vice-versa via tooltip",
  "permissions": [
    "http://morfix.mako.co.il/*"
  ],
  "icons": {
    "16" : "HTT-16.png",
    "48" : "HTT-48.png",
    "128" : "HTT-128.png"
  },
  "background_page" : "HTT-background.html",
  "options_page": "HTT-options.html",
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "css": ["htt.css"],
      "js" : ["HTT-contentscript.js"]
    }
  ]
}
