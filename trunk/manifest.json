{
  "name": "Hebrew Tooltip Translation for Chrome",
  "version": "1.2",
  "description": "Translate Hebrew to English and vice-versa via tooltip",
  "permissions": [
    "http://morfix.mako.co.il/*"
  ],
  "icons": {
    "48" : "HTT-48.png",
    "128" : "HTT-128.png"
  },
  "background_page" : "background.html",
  "options_page": "options.html",
  "update_url": "http://hebrew-tooltip-translations-for-chrome.googlecode.com/files/updates.xml",
  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "css": ["htt.css"],
      "js" : ["contentscript.js"]
    }
  ]
}
